{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Pseudocode",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.pseudocode",
				"match": "\\b(START|INPUT|OUTPUT|SET|TO|IF|IS|LESS-THAN|GREATER-THAN|EQUAL-TO|THEN|ELSE|END-IF|WHILE|END-WHILE|REPEAT|UNTIL)\\b"
			}]
		},
		"numbers": {
			"patterns": [{
				"name": "numbers.control.pseudocode",
				"match": "\\b([0-9]+)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.pseudocode",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.pseudocode",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.psc"
}